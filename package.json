{
  "name": "picksleagues-api",
  "version": "1.0.0",
  "description": "API for the PicksLeagues Client Apps",
  "main": "dist/api/index.js",
  "scripts": {
    "build": "tsc && npm run sentry:sourcemaps",
    "start": "node dist/api/index.js",
    "dev": "tsx watch src/api/index.ts",
    "format": "prettier --write src/ --ext .ts,.tsx",
    "lint": "eslint src/ --ext .ts,.tsx",
    "lint:fix": "eslint src/ --ext .ts,.tsx --fix",
    "db:push": "tsx node_modules/.bin/drizzle-kit push",
    "db:generate": "tsx node_modules/.bin/drizzle-kit generate",
    "db:migrate": "tsx node_modules/.bin/drizzle-kit migrate",
    "db:studio": "tsx node_modules/.bin/drizzle-kit studio",
    "db:seed": "tsx src/db/seed/index.ts",
    "db:seed:pickem": "tsx src/db/seed/pickemLeagues.cli.ts",
    "db:seed:base": "tsx src/db/seed/minimalBaseData.ts",
    "setup:dev": "npm run db:migrate && npm run db:seed",
    "backlog:list": "backlog task list --plain",
    "backlog:view": "backlog task",
    "backlog:create": "backlog task create",
    "backlog:edit": "backlog task edit",
    "backlog:ui": "backlog browser",
    "test": "vitest run",
    "favicons": "node scripts/generate-favicons.js",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org paul-macfarlane --project picksleagues-api ./dist && sentry-cli sourcemaps upload --org paul-macfarlane --project picksleagues-api ./dist"
  },
  "dependencies": {
    "@better-auth/expo": "^1.2.9",
    "@neondatabase/serverless": "^1.0.1",
    "@sentry/cli": "^2.50.2",
    "@sentry/node": "^10.1.0",
    "@types/ejs": "^3.1.5",
    "@types/express-ejs-layouts": "^2.5.4",
    "axios": "^1.10.0",
    "better-auth": "^1.2.9",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-ejs-layouts": "^2.5.1",
    "inversify": "^7.5.4",
    "p-limit": "^6.2.0",
    "pg": "^8.16.2",
    "reflect-metadata": "^0.2.2",
    "sharp": "^0.34.3",
    "unique-username-generator": "^1.4.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.3",
    "@types/pg": "^8.15.4",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.2.0",
    "jose": "^6.0.11",
    "prettier": "3.5.3",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^3.1.0"
  },
  "type": "module"
}
