{
  "name": "picksleagues-api",
  "version": "1.0.0",
  "description": "API for the Picks Leagues Client Apps",
  "main": "dist/api/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/api/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/api/index.ts",
    "format": "prettier --write src/**/*.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed/index.ts",
    "setup:dev": "npm run db:migrate && npm run db:seed",
    "backlog:list": "backlog task list --plain",
    "backlog:view": "backlog task",
    "backlog:create": "backlog task create",
    "backlog:edit": "backlog task edit",
    "backlog:ui": "backlog browser",
    "test": "vitest"
  },
  "dependencies": {
    "@better-auth/expo": "^1.2.9",
    "@types/ejs": "^3.1.5",
    "@types/express-ejs-layouts": "^2.5.4",
    "axios": "^1.10.0",
    "better-auth": "^1.2.9",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-ejs-layouts": "^2.5.1",
    "inversify": "^7.5.4",
    "pg": "^8.16.2",
    "reflect-metadata": "^0.2.2",
    "unique-username-generator": "^1.4.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.3",
    "@types/pg": "^8.15.4",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.2.0",
    "jose": "^6.0.11",
    "prettier": "3.5.3",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^3.1.0"
  }
}
